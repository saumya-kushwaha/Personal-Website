
@model Final4.Models.AcademicItem

@{
    ViewData["Title"] = "Academic Details";
}


<div style="display:flex;margin-top:50px;justify-content:center">
    <img src="@Html.DisplayFor(model => model.AcadImage)" width="900" height="400" />
</div>

<div style="display:flex;justify-content:center;margin-top:10px;font-size:20px;color:aquamarine">
    <b><u> @Html.DisplayFor(model => model.AcademicName) </u></b>
</div>
<div style="display:flex;justify-content:center">
    @Html.DisplayFor(model => model.College)
</div>
<div style="display:flex;justify-content:center">
    <span><b><u>Major </u> : </b></span> @Html.DisplayFor(model => model.Major)
</div>
<div style="display:flex;justify-content:center">
    <span><b><u>CourseWork </u> : </b></span> @Html.DisplayFor(model => model.CourseWork)
</div>
<div style="display:flex;justify-content:center">
    <span><b><u>GPA </u> : </b></span> @Html.DisplayFor(model => model.gpa)
</div>

<div style="display:block;height:30px">
</div>

<footer style="bottom:0;width:100%;position:absolute;height:2.5rem;">
    
    <a href="https://www.linkedin.com/in/anishnesarkar/" target="_blank"><img style="margin-top:7px;" src="~/Images/linkedlnImage.png" height="40" width="40" /></a>
    <a href="https://www.facebook.com/anish.nkr" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/facebook.png" height="40" width="40" /></a>
    <a href="https://www.instagram.com/anish_nkr/?hl=en" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/anish_nkr_nametag.png" height="40" width="40" /></a>
    <a style="margin-left:75%" asp-controller="Academics" asp-action="AcademicIndex">Back</a>
</footer>
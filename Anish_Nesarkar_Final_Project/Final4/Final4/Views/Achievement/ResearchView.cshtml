@model IEnumerable<Final4.Models.ResearchPublication>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Research View";

}

<div>
    <img src="~/Images/research_background.jpg" height="400" width="1100" />
</div>

@if (User.IsInRole("Admin"))
{
    <div style="display:flex;justify-content:flex-end">
        <a asp-action="AddResearch">Add New Research Publication</a>
    </div>
}
<div style="display:flex;width:1200px; justify-content:space-around">
    @foreach (var item in Model)
    {

        <div style="display:block;width:250px;height:100px;background-color:aquamarine;padding:70px 0;text-align:center">
            <a asp-action="ResearchDetails" asp-route-id="@item.ResearchPublicationId">
                @Html.DisplayFor(modelItem => item.researchName)
            </a>
            @if (User.IsInRole("Admin"))
            {
                <p></p>
                <span><                  </span>
                <a asp-action="EditResearch" asp-route-id="@item.ResearchPublicationId">Edit</a> <span> | </span>
                <a asp-action="DeleteResearch" asp-route-id="@item.ResearchPublicationId">Delete</a> <span> > </span>

            }
        </div>


    }

</div>


<div style="display:block;height:30px">
</div>

<footer style="bottom:0;width:100%;position:absolute;height:2.5rem;">

    <a href="https://www.linkedin.com/in/anishnesarkar/" target="_blank"><img style="margin-top:7px;" src="~/Images/linkedlnImage.png" height="40" width="40" /></a>
    <a href="https://www.facebook.com/anish.nkr" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/facebook.png" height="40" width="40" /></a>
    <a href="https://www.instagram.com/anish_nkr/?hl=en" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/anish_nkr_nametag.png" height="40" width="40" /></a>
    <a style="margin-left:75%" asp-controller="Achievement" asp-action="AchievementIndex">Back</a>
    <h5 style="text-align:center"><b><a asp-action="CommentIndex">Add Comments/Notes</a></b></h5>
</footer>
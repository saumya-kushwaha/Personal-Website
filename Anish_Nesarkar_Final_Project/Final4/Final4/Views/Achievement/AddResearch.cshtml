@model Final4.Models.ResearchPublication
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Research Add View";
}


<form asp-controller="Achievement" asp-action="AddResearch" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group">
        <label asp-for="researchName" class="input-group-btn"></label>
        <input asp-for="researchName" class="form-control" />
        <span asp-validation-for="researchName" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="Conference" class="input-group-btn"></label>
        <input asp-for="Conference" class="form-control" />
        <span asp-validation-for="Conference" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="researchYear" class="input-group-btn"></label>
        <input asp-for="researchYear" class="form-control" />
        <span asp-validation-for="researchYear" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="link" class="input-group-btn"></label>
        <input asp-for="link" class="form-control" />
        <span asp-validation-for="link" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="researchImage" class="input-group-btn"></label>
        <input type="file" asp-for="researchImage" class="form-control" />
        <span asp-validation-for="researchImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>


<div style="display:block;height:30px">
</div>

<footer style="bottom:0;width:100%;position:absolute;height:2.5rem;">

    <a href="https://www.linkedin.com/in/anishnesarkar/" target="_blank"><img style="margin-top:7px;" src="~/Images/linkedlnImage.png" height="40" width="40" /></a>
    <a href="https://www.facebook.com/anish.nkr" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/facebook.png" height="40" width="40" /></a>
    <a href="https://www.instagram.com/anish_nkr/?hl=en" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/anish_nkr_nametag.png" height="40" width="40" /></a>
    <a style="margin-left:75%" asp-controller="Achievement" asp-action="AchievementIndex">Back</a>
    <h5 style="text-align:center"><b><a asp-action="CommentIndex">Add Comments/Notes</a></b></h5>
</footer>





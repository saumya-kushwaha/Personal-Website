@model Final4.Models.Project
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Project";
}


<form asp-controller="Achievement" asp-action="EditProject" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProjectId" />
    <div class="input-group">

        <label asp-for="ProjectName" class="input-group-btn"></label>

        <input style="margin-left:10px" asp-for="ProjectName" class="form-control" />

        <span asp-validation-for="ProjectName" class="text-danger"></span>

    </div>
    <div class="input-group">
        <label asp-for="Details" class="input-group-btn"></label>
        <input style="margin-left:53px" asp-for="Details" class="form-control" />
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="Duration" class="input-group-btn"></label>
        <input style="margin-left:40px" asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="Skills" class="input-group-btn"></label>
        <input style="margin-left:67px" asp-for="Skills" class="form-control" />
        <span asp-validation-for="Skills" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="link" class="input-group-btn"></label>
        <input style="margin-left:77px" asp-for="link" class="form-control" />
        <span asp-validation-for="link" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label asp-for="projectImage" class="input-group-btn"></label>
        <input style="margin-left:9px" type="file" asp-for="projectImage" class="form-control" />
        <span asp-validation-for="projectImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div style="display:block;height:30px">
</div>
<footer style="bottom:0;width:100%;position:absolute;height:2.5rem;">
    <a href="https://www.linkedin.com/in/anishnesarkar/" target="_blank"><img style="margin-top:7px;" src="~/Images/linkedlnImage.png" height="40" width="40" /></a>
    <a href="https://www.facebook.com/anish.nkr" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/facebook.png" height="40" width="40" /></a>
    <a href="https://www.instagram.com/anish_nkr/?hl=en" target="_blank"><img style="margin-top:7px;margin-left:7px" src="~/Images/anish_nkr_nametag.png" height="40" width="40" /></a>
    <a style="margin-left:75%" asp-controller="Achievement" asp-action="ProjectView">Back</a>
</footer>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






@model Final4.Models.Comment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Comment View";
}


<form asp-controller="Comments" asp-action="AddComment" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group">
        <label  class="input-group-btn">Section : </label>
        <input asp-for="CommentTopic" class="form-control" />
        <span asp-validation-for="CommentTopic" class="text-danger"></span>
    </div>
    <div class="input-group">
        <label class="input-group-btn">Comment : </label>
        <input asp-for="CommentData" class="form-control" />
        <span asp-validation-for="CommentData" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>








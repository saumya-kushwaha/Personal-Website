@model IEnumerable<Final4.Models.Internship>

@{
    ViewData["Title"] = "InternView";

}
@if (User.IsInRole("Admin"))
{
    <div style="display:flex;justify-content:flex-end">
        <a asp-action="AddIntern">Add New Internship</a>
    </div>
}
<div style="display:flex;width:1200px; justify-content:space-around">
    @foreach (var item in Model)
    {

        <div style="display:block;width:250px;height:100px;background-color:aquamarine;padding:70px 0;text-align:center">
            <a asp-action="InternDetails" asp-route-id="@item.InternshipId">
                @Html.DisplayFor(modelItem => item.Role)
            </a>
            @if (User.IsInRole("Admin"))
            {
                <p></p>
                <span><                  </span>
                <a asp-action="EditIntern" asp-route-id="@item.InternshipId">Edit</a> <span> | </span>
                <a asp-action="DeleteIntern" asp-route-id="@item.InternshipId">Delete</a> <span> > </span>

            }
        </div>


    }

</div>

<div style="display:block;height:30px">
</div>

<footer style="bottom:0;width:100%;position:absolute;height:2.5rem;">
    <h5 style="text-align:center"><b><a asp-controller="Comments" asp-action="CommentView">Add Comments/Notes</a></b></h5>
